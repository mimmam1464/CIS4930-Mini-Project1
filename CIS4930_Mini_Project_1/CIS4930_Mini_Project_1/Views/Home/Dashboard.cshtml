<table style="width: 100%">
    <tr>
        <th>Task</th>
        <th>Completed Task</th>
        <th>Delete Task</th>
    </tr>
    <tr>
        <td>Complete Dashboard</td>
        <td>
            <input onclick="change()" type="submit" class="btn btn-default" id="completeTask" value="Not Completed">
        </td>
        <td>
            <input type="button" class="btn btn-default" id="deleteTask" value="Delete" />
        </td>
    </tr>
    <tr>
        <td>Buy Eggs</td>
        <td>
            <input onclick="change()" type="submit" class="btn btn-default" id="completeTask" value="Not Completed">
        </td>
        <td>
            <input type="button" class="btn btn-default" id="deleteTask" value="Delete" />
        </td>
    </tr>
    <tr>
        <td>Turn in Assignment</td>
        <td>
            <input onclick="change()" type="submit" class="btn btn-default" id="completeTask" value="Not Completed">
        </td>
        <td>
            <input type="button" class="btn btn-default" id="deleteTask" value="Delete" />
        </td>
    </tr>

</table>

<script>
    document.addEventListener("mousedown", change); 

    function change(e) {
        var elem = document.elementFromPoint(e.clientX, e.clientY).closest("input");

        if (elem.value != "Completed" && elem.id == "completeTask") {
            document.elementFromPoint(e.clientX, e.clientY).value = "Completed";
            document.elementFromPoint(e.clientX, e.clientY).style.background = "#78DE8A";
        }
        else if (elem.value == "Completed" && elem.id == "completeTask") {
            document.elementFromPoint(e.clientX, e.clientY).value = "Not Completed";
            document.elementFromPoint(e.clientX, e.clientY).style.background = "#DE7878";
        }
    }
</script>